<%= simple_form_for @book, :html => { :multipart => true } do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "カテゴリーを追加する") %>
  <%= f.input :title, label: "タイトル" %>
  <%= f.input :description, label: "説明文" %>
  <%= f.input :author, label: "著者" %>
  <%= f.button :submit, :class => 'btn-custom2' %>
<% end %>
