<%= simple_form_for([@book, @book.reviews.build]) do |f| %>
	<div id="rating-form">
		<%#= f.input :rating %>
		<label>評価</label>
	</div>
	<%= f.input :comment, label: "コメント" %>
	<%= f.button :submit, :class => "btn-custom2" %>
<% end %>

<script>
	$('#rating-form').raty({
		path: '/assets/',
		scoreName: 'review[rating]'
	});
</script>
